<div class="ui card">
    <div class="ui move reveal card__content">
        <div class="visible content ui card">
            <img class="ui image" src="https://image.tmdb.org/t/p/w500{{poster_path}}">
            <div class="content">
                <div class="header u-ws-i">{{title}}</div>
            </div>
        </div>
        <div class="hidden content ui card card__description">
            <div class="content">
                <div class="header u-ws-i">{{title}}</div>
                <div class="extra description">
                    <span class="extra__release-year"><i class="calendar icon"></i>{{release_year}}</span>
                    <div data-role="rate" class="ui star rating" data-rating="{{vote_average_rounded}}"></div>
                </div>
            </div>
            <div class="content u-ws-i">
                <div class="description">
                    {{overview}}
                </div>
            </div>
        </div>
    </div>
</div>
